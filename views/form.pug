meta(charset="UTF-8")
meta(name="viewport", content="width=device-width")
style
  include ../public/stylesheets/style.css
title forms
h1 Forms
form(method="POST", action="http://localhost:3002/save", id="form")
  #name
    label(for="name") Name
    input(name="name", type="text", placeholder="Enter visitor name", required)
  #assistedBy
    label(for="assistedBy") Assisted by
    input(name="assistedBy", type="text", placeholder="name of assistant", required)
  #age
    label(for="age") age
    input(name="age", type="text", placeholder="Enter age", required)
  #dateOfVisit
    label(for="dateOfVisit") date of visit
    input(name="dateOfVisit", type="Date", default, required)
  #timeOfVisit
    label(for="timeOfVisit") time of visit
    input(name="timeOfVisit", type="time", default, required)
  #comments
    label(for="comments") comments
    input(name="comments", type="text-area", placeholder="type comments here", required)
  #submitbutton
    button(type="submit") Submit
